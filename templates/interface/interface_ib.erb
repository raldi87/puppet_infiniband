# File Managed by Puppet
# Do not edit this file manually
DEVICE="<%= @interface %>"
<% if ! @manage_bootproto -%>
BOOTPROTO="<%= @bootproto %>"
<% end -%>
ONBOOT="<%= @onboot %>"
TYPE="<%= @type %>"
<% if @manage_ipaddr and ! @manage_ipaddr.empty? -%>
<% if @ipaddress.kind_of?(Array) -%>
<%- (1..(@ipaddress.length)).each do |id| -%>
IPADDR<%= id %>="<%= @ipaddress[id-1] %>"
<% end -%>
<% else -%>
IPADDR="<%= @ipaddress %>"
<% end -%>
<% end -%>
<% if @netmask -%>
<% if @ipaddress.kind_of?(Array) -%>
<% if @netmask.kind_of?(Array) -%>
<%- (1..(@netmask.length)).each do |id| -%>
NETMASK<%= id %>="<%= @netmask[id-1] %>"
<% end -%>
<% else -%>
<%- (1..(@ipaddress.length)).each do |id| -%>
NETMASK<%= id %>="<%= @netmask %>"
<% end -%>
<% end -%>
<% else -%>
NETMASK="<%= @netmask %>"
<% end -%>
<% end -%>
<% if @broadcast -%>
BROADCAST="<%= @broadcast %>"
<% end -%>
<% if @gateway -%>
GATEWAY="<%= @gateway %>"
<% end -%>
<% if @manage_defroute -%>
DEFROUTE="<%= @manage_defroute %>"
<% end -%>
<% if @manage_hwaddr -%>
HWADDR="<%= @manage_hwaddr %>"
<% end -%>
<% if @ipv6init -%>
IPV6INIT="<%= @ipv6init %>"
<% end -%>
<% if @ipv6_autoconf -%>
IPV6_AUTOCONF="<%= @ipv6_autoconf %>"
<% end -%>
<% if @ipv6addr -%>
IPV6_ADDR="<%= @ipv6addr %>"
<% end -%>
<% if @ipv6_defaultgw -%>
IPV6_DEFAULTGW="<%= @ipv6_defaultgw %>"
<% end -%>
<% if @network -%>
NETWORK="<%= @network %>"
<% end -%>
<% if @hotplug -%>
HOTPLUG="<%= @hotplug %>"
<% end -%>
<% if @connected_mode -%>
CONNECTED_MODE="<%= @connected_mode %>"
<% end -%>
<% if @mtu -%>
MTU="<%= @mtu %>"
<% end -%>
